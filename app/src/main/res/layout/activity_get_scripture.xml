<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".GetScripture">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/book"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:hint="Enter the Book"
        android:inputType="text" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/chapter"
        android:layout_below="@+id/book"
        android:layout_alignRight="@+id/book"
        android:layout_alignEnd="@+id/book"
        android:layout_marginTop="60dp"
        android:layout_alignLeft="@+id/book"
        android:layout_alignStart="@+id/book"
        android:hint="Enter Chapter #" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/verse"
        android:layout_below="@+id/chapter"
        android:layout_alignLeft="@+id/chapter"
        android:layout_alignStart="@+id/chapter"
        android:layout_marginTop="60dp"
        android:layout_alignRight="@+id/chapter"
        android:layout_alignEnd="@+id/chapter"
        android:hint="Enter Verse #" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Share"
        android:onClick="shareScripture"/>
</RelativeLayout>
